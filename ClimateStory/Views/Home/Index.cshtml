@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Add a div for the map -->
<div id="map" style="height: 600px; width: 100%;"></div>

<!-- Include Leaflet.js -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
    // Define the bounds for Canada
    var canadaBounds = [
        [41.6765556, -141.00187], // Southwest corner (approx)
        [83.11388, -52.63629]     // Northeast corner (approx)
    ];

    // Initialize the map and fit it within Canada bounds
    var map = L.map('map').fitBounds(canadaBounds);

    // Add OpenStreetMap tile layer
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    // Restrict panning and zooming to Canada's bounding box
    map.setMaxBounds(canadaBounds);
    map.setMinZoom(4);  // Set an appropriate zoom level for Canada

    L.marker([56.1304, -106.3468]).addTo(map)
        .bindPopup('A pretty marker.<br> Easily customizable.')
        .openPopup();
</script>
